#Global background
#:import utils kivy.utils
<Background_Color@Widget>:               
    background_color: 1, 0, 0, 1
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#a6a6a6')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]


#Buttons in Renting window -- There must be Float Layout first
<Botton_RFID@Button+Background_Color>:
    size_hint: (.6, .4)
    pos_hint : {"top" : 0.7, "x" : 0.2}
    halign : "center"
    background_color: 0,0,0,0
    color: 0, 0, 0, 1
    font_size: 19

<TextInput_RFID@TextInput>:
    multiline: False
    font_size: 19
    background_color: (0, 0, 0, 0)
    foreground_color: (1, 1, 1, 1)
    halign: 'center'

<Label_RFID@Label>:
    font_size: 19



<Main_window>:

    list :list
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'kivy_img/Background.png'

    BoxLayout:
        halign: 'center'
        orientation: 'vertical'
        spacing: 10

        Image:
            source: 'kivy_img/LOGO.png'
            size_hint_y: .3
    

        GridLayout:
            cols: 2


            ScrollView:              
                GridLayout:
                    size_hint_y: None
                    cols:1
                    id: list
                    height: self.minimum_height
                    spacing: 10
                    padding: 10



            BoxLayout:
                size_hint_x: .3
                halign: 'center'
                orientation: 'vertical'
                spacing: 10

                
                Label: 
                    halign: 'center'
                    font_size: 25
                    text: "Put item \non the RFID \nReader"
                
                Botton_RFID:
                    text : "Reload base"
                    size_hint_y: 0.2
                    pos_hint: {'y': 0.5, 'x':0.2}
                    color: 0, 0, 0, 1
                    on_release: 
                        root.dev_base()
        Label:
            size_hint_y: 0.05
                
                


            



<Renting_window>:

    us_name : us_name
    us_surname : us_surname
    us_index : us_index
    us_email : us_email
    us_phone : us_phone

    dev_name : dev_name
    dev_mac : dev_mac
    return_date : return_date

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'kivy_img/Background.png'

    BoxLayout:
        halign: 'center'
        orientation: 'vertical'
        spacing: 10

        Image:
            source: 'kivy_img/LOGO.png'
            size_hint_y: .3
    

        BoxLayout:
            halign: 'center'
            orientation: 'horizontal'
            spacing: 10


            BoxLayout:
                halign: 'center'
                orientation: 'vertical'
                spacing: 1

                    
                TextInput_RFID:
                    id: us_name
                    hint_text: "______________ Name ______________"
                    on_text_validate:
                        root.empty_value("Name",us_name.text)

                    
                TextInput_RFID:
                    id: us_surname
                    hint_text: "_____________ Surname _____________"
                    on_text_validate:
                        root.empty_value("Surname",us_surname.text)

                    
                TextInput_RFID:
                    id: us_index
                    hint_text: "_______________ Index _______________"

                    
                TextInput_RFID:
                    id: us_email
                    hint_text: "______________  E-mail  ______________"
                    on_text_validate:
                        root.empty_value("E-mail",us_email.text)

                    
                TextInput_RFID:
                    id: us_phone
                    hint_text: "______________  Phone  ______________"

                TextInput_RFID:
                    id: return_date
                    hint_text: "_____ Return date <YYYY-MM-DD> _____"
                    on_text_validate:
                        root.check_date()
                

            GridLayout:
                cols: 1
                size_hint_x : .8

                Label:

                Label_RFID:
                    id: dev_name
                    text: "Item name"

                Label_RFID:
                    id: dev_mac
                    text: "Item MAC"

                Label_RFID:
                    text: "Today's date:  " + root.today()

                Label:
                        

                

        GridLayout:
            cols: 3
            size_hint_y : .4

            FloatLayout:
                Botton_RFID:
                    text: "Rent"
                    on_release: root.rent_button()     
                        
            FloatLayout:
                Botton_RFID:
                    text: "Scan Student \nCard"
                    on_release: root.scan_student_card_button()

            FloatLayout:
                Botton_RFID:
                    text: "Cancel"
                    on_release: root.cancel_button()    
                





<Return_window>:

    us_name : us_name
    us_surname : us_surname
    us_index : us_index
    us_email : us_email
    us_phone : us_phone

    dev_name : dev_name
    dev_id : dev_id
    dev_mac : dev_mac
    dev_date : dev_date
    return_date : return_date
    return_button_id : return_button_id

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'kivy_img/Background.png'

    BoxLayout:
        halign: 'center'
        orientation: 'vertical'
        spacing: 10

        Image:
            source: 'kivy_img/LOGO.png'
            size_hint_y: .3

        Label:
            size_hint_y: .05
    

        BoxLayout:
            halign: 'center'
            orientation: 'horizontal'
            spacing: 10


            BoxLayout:
                halign: 'center'
                orientation: 'vertical'
                spacing: 1

                Label_RFID: 
                    id: us_name
                    text: "Name"
                    size_hint_y: .3

                Label_RFID: 
                    id: us_surname
                    text: "Surname"
                    size_hint_y: .3

                Label_RFID: 
                    id: us_index
                    text: "Index"
                    size_hint_y: .3

                Label_RFID: 
                    id: us_email
                    text: "E-mail"
                    size_hint_y: .3

                Label_RFID: 
                    id: us_phone
                    text: "Phone"
                    size_hint_y: .3
                
                Label:
                    

            BoxLayout:
                halign: 'center'
                orientation: 'vertical'

                Label:

                TextInput_RFID: 
                    id: return_date
                    hint_text: "_ Prologue <YYYY-MM-DD> _"
                    on_text_validate:
                        root.check_date()

                Label:     
                    size_hint_y: .4   

                FloatLayout:
                    Botton_RFID:
                        id: return_button_id
                        text: "Return"
                        size_hint: (.9, .4)
                        pos_hint: {"top" : 0.4, "x" : 0.05}
                        on_release: 
                            root.return_button()
                
                
                FloatLayout:
                    
                    Botton_RFID:
                        text: "Cancel"
                        size_hint: (.9, .4)
                        pos_hint: {"top" : 0.9, "x" : 0.05}
                        on_release: 
                            root.cancel_button()    

                Label:  
                    size_hint_y: .4




            BoxLayout:
                halign: 'center'
                orientation: 'vertical'
                spacing: 1

                Label_RFID: 
                    id: dev_name
                    text: "Name"
                    size_hint_y: .3

                Label_RFID: 
                    id: dev_id
                    text: "ID"
                    size_hint_y: .3

                Label_RFID: 
                    id: dev_mac
                    text: "MAC"
                    size_hint_y: .3

                Label_RFID: 
                    id: dev_date
                    text: root.today()
                    size_hint_y: .3
                
                Label:



            





<Not_exist_window>:
    dev_name : dev_name
    dev_mac : dev_mac

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'kivy_img/Background.png'

    BoxLayout:
        halign: 'center'
        orientation: 'vertical'
        spacing: 10
        Label:
        Image:
            source: 'kivy_img/LOGO.png'

        Label_RFID: 
            text: "Add new item to database"
            size_hint_y: .2

        Label_RFID:
            id: dev_id
            size_hint_y: .2
            text: "Item ID"

        Label_RFID:
            id: dev_mac
            size_hint_y: .2
            text: "Device MAC"


        TextInput_RFID:
            size_hint_x : 0.6
            pos_hint: {'x': 0.2}
            id: dev_name
            hint_text: "______________ New device's name ______________"
            on_text_validate:
                root.empty_value("Device name", dev_name.text)

        
        Label:      

        GridLayout:
            cols: 2
            size_hint_y : 0.8

            FloatLayout:
                Botton_RFID:
                    text: "Add"
                    on_release:
                        root.add_button()

            FloatLayout:
                Botton_RFID:
                    text: "Cancel"
                    on_release:
                        root.cancel_button()
 